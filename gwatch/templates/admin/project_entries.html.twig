{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <h1 class="title">User admin</h1>
            <p class="lead description"></p>
        </div>

        <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="col-md-12 col-lg-12 col-xl-12">
                <a type="button" href="{{ path('admin_create_project_entry') }}" class="btn btn-primary pull-right">Add Entry</a>
            </div>
            <div class="col-sm-12 main">
                <table class="table table-striped">
                    <thead>
                        <th>Title</th>
                        <th>Created At</th>
                        <th>Action</th>
                    </thead>
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.title }}</td>
                            <td>{{ project.createdAt|date('F j, Y') }}</td>
                            <td><a class="btn btn-danger" href="{{ path('admin_delete_project_entry', {'entryId': project.id}) }}">Delete</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No project-entries available</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
<h2>This is admin/project_entries.html.twig</h2>
{% endblock %}